package string;

import org.omg.CORBA.PRIVATE_MEMBER;

public class Test {
	public static void main(String [] args) {
		System.out.println(new StringBuffer("gjsgjd").reverse().toString());//翻转方法
		System.out.println(new StringBuffer("aassssdf").reverse().toString().equals("ss"));//直接方法判断
		System.out.println(isParindrom("ada"));
		
	}
	//判断是否回文数
	private static boolean isParindrom(String s) {
		if(s == null)
			return false;
		int l = 0;
		int r = s.length()-1;
		while(l < r) {
			if(s.charAt(l++) != s.charAt(r--))
				return false;		
		}
		return true;
	}
}
